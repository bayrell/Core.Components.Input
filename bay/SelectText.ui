<class version="1.0"
	name="Runtime.Web.Input.SelectText" extends="Runtime.Web.Component" 
	module="Runtime.Web.Input"
>


<use name="Runtime.lib" />
<use name="Runtime.Core.Message" />
<use name="Runtime.Web.Events.User.ChangeEvent" />


<style>
</style>



<template name="render">
	%var string name = (params != null) ? params.get("name", "") : "";
	%var string value = (params != null) ? params.get("value", "") : "";
	%var string def_value = (params != null) ? params.get("default", "") : "";
	%var value = rtl::isEmpty(value) ? model : value;
	%if (rtl::isEmpty(value) and value !== false and value !== 0 and value !== "0"){ %var value = def_value; }
	
	%var Collection options = params["options"];
	%if (rtl::exists(options))
	{
		%var Dict item = options.findItem( lib::equalAttr("id", value) );
		%if (rtl::exists(item))
		{
			{ item["value"] }
		}
	}
</template>



<script type="frontend">

</script>


</class>