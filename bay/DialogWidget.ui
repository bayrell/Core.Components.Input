<class version="1.0"
	name="Runtime.Web.CRUD.DialogWidget" extends="Runtime.Web.App.Widget" 
	module="Runtime.Web.CRUD" model="Runtime.Web.App.PageModel"
>

<use name="Runtime.Web.ListenerCallback" />
<use name="Runtime.Web.Message" />
<use name="Runtime.Web.App.RemoteCallAnswer" />
<use name="Runtime.Web.App.WebApp" />
<use name="Runtime.Web.CRUD.CrudPageModel" />
<use name="Runtime.Web.CRUD.CrudWidgetEvent" />
<use name="Runtime.Web.CRUD.CrudWidgetSignal" />
<use name="Runtime.Web.CRUD.DialogWidgetModel" />
<use name="Runtime.Web.CRUD.FieldInfo" />
<use name="Runtime.Web.Dialog.Dialog" component="true" />
<use name="Runtime.Web.Dialog.DialogEvent" />
<use name="Runtime.Web.Dialog.DialogModel" />
<use name="Runtime.Web.Events.BaseEvent" />
<use name="Runtime.Web.Events.SignalEvent" />


<style>
.form{
}
.form_row{
	padding-bottom: 15px;
}
.form_row:last-child{
	padding-bottom: 0px;
}
.form_label{
	font-weight: bold;
	padding-bottom: 5px;
}
.form_value{}
.form_value input, .form_value textarea, .form_value select{
	width: 100%;
	padding: 5px 10px;
}
.form_value textarea{
	height: 400px;
}
.form_buttons{
	text-align: center;
	margin-top: 10px;
}
.form_buttons %(Button)button{
	margin-left: 10px;
	margin-right: 10px;
}
.form_error{
	text-align: center;
	padding-top: 5px;
	color: red;
}
.form_result{
	padding-top: 10px;
	text-align: center;
}
.form_result.success{
	color: green;
}
.form_result.error{
	color: red;
}
</style>


<template>
	
	%var DialogWidgetModel model = layout.getModel(model_path);
	%if (model.action == "add")
	{
		<Dialog @model=["dialog"] @ref="dialog" @event:DialogEvent="onDialogEvent"
			style={ DialogModel::STYLE_CONTENT } auto_hide={ false }
			buttons=
			[
				{
					"type": "danger",
					"data-action": "add",
					"value": "Add",
				},
				{
					"type": "default",
					"data-action": "cancel",
					"value": "Cancel",
				},
			]
		>
			{ static::renderForm(layout, model_path, params) }
		</Dialog>
	}
	
	%if (model.action == "edit")
	{
		<Dialog @model=["dialog"] @ref="dialog" @event:DialogEvent="onDialogEvent"
			style={ DialogModel::STYLE_CONTENT } auto_hide={ false }
			buttons=
			[
				{
					"type": "danger",
					"data-action": "edit",
					"value": "Edit",
				},
				{
					"type": "default",
					"data-action": "cancel",
					"value": "Cancel",
				},
			]
		>
			{ static::renderForm(layout, model_path, params) }
		</Dialog>
	}
	
	%if (model.action == "delete")
	{
		<Dialog @model=["dialog"] @ref="dialog" @event:DialogEvent="onDialogEvent"
			style={ DialogModel::STYLE_CONTENT } auto_hide={ false }
			buttons=
			[
				{
					"type": "danger",
					"data-action": "delete",
					"value": "Delete",
				},
				{
					"type": "default",
					"data-action": "cancel",
					"value": "Cancel",
				},
			]
		>
			%var string crud_class_name = layout.page_class;
			%var Dict messsages = rtl::applyMethod(crud_class_name, "getMessages");
			%var fn message = messsages["delete"];
			{ message(model.item) }
		</Dialog>
	}
</template>


<template name="renderForm" args="LayoutModel layout, string model_path, Dict params">

	%var DialogWidgetModel model = layout.getModel(model_path);
	%var CrudPageModel page_model = layout.getPageModel();
	%var Collection<string> table_fields = page_model.form_fields;
	
	<div class="form_rows" @key="rows">
		%for (int i=0; i<table_fields.count(); i++)
		{
			%var string field_name = table_fields[i];
			%var FieldInfo field = page_model.getFieldInfo(field_name);
			%render static::renderRow(layout, model_path, params, field);
		}
	</div>

</template>



<template name="renderRow" args="LayoutModel layout, string model_path, Dict params, FieldInfo field">
	
	%var DialogWidgetModel model = layout.getModel(model_path);
	%var string crud_class_name = layout.page_class;
	
	%if (field != null)
	{
		%var Collection<string> item_model_path = ["item", field.api_name];
		%var Dict crud_settings =
		{
			"crud_kind": model.kind,
			"crud_item": model["item"],
			"crud_params": params,
			"crud_field": field,
			"crud_form_model": model,
			"crud_item_model_path": item_model_path,
			"crud_show": true,
			"value": model["item", field.api_name],
		};
		
		<!-- Custom settings -->
		%if (rtl::method_exists(crud_class_name, "customSettings"))
		{
			%var crud_settings = rtl::methodApply(crud_class_name, "customSettings", [layout, crud_settings]);
		}
		
		<!-- Render value -->
		%var html renderValue = null;
		%if (rtl::method_exists(crud_class_name, "renderField"))
		{
			%var renderValue = rtl::methodApply(crud_class_name, "renderField", [layout, crud_settings]);
		}
		
		<!-- Extend class settings -->
		%var field = crud_settings["crud_field"];
		%var crud_settings = crud_settings.concat(field.class_settings);
		
		<!-- Render Field -->
		%var item_model_path = crud_settings["crud_item_model_path"];
		%var bool crud_show = crud_settings["crud_show"];
		%var string field_class_name = field["class_name"] |> default string "";
		%if (crud_show)
		{
			<div class='form_row' @key={ field.api_name }>
				<div class='form_label'>
					{ field["label"] }:
				</div>
				<div class='form_value'>
					%if (renderValue !== null)
					{
						{ renderValue }
					}
					%else if (not rtl::isEmpty(field_class_name))
					{
						<{field_class_name} @bind={ item_model_path } @key={ field.api_name } name={ field.api_name }
							@event:ChangeEvent="onItemChange" ...crud_settings />
					}
				</div>
				{ static::renderFieldError(layout, model_path, field.api_name) }
			</div>
		}
	}

</template>



<template name="renderFieldError" args="LayoutModel layout, string model_path, string field_name">
	
	%var DialogWidgetModel model = layout.getModel(model_path);
	<div class='form_error'>
		%var Collection<string> errors = model["fields_errors"][field_name];
		%if (errors != null)
		{
			%for (int i=0; i<errors.count(); i++)
			{
				%var string s = errors[i];
				<div class='form_error_line'>{ s }</div>
			}
		}
	</div>
</template>



<script>


var dialog = null;


/**
 * On signal
 */
async void onSignal(Message<SignalEvent> msg, ListenerCallback item)
{
	await parent::onSignal(msg);
	
	SignalEvent signal = msg.data;
	
	/* Crud widget signal */
	if (signal instanceof CrudWidgetSignal)
	{
		/* Get widget model */
		DialogWidgetModel widget_model = this.model();
		
		/* Open dialog */
		if (signal.command == "open_dialog_add" and widget_model.action == "add")
		{
			this.sendEvent( new SignalEvent{ "command": "clear" }, this );
			this.sendEvent( new SignalEvent{ "command": "show" }, this.dialog );
		}
		
	}
	
	/* Simple signal */
	else if (signal instanceof SignalEvent)
	{
		/* Get widget model */
		DialogWidgetModel widget_model = this.model();
		
		/* Clear form */
		if (signal.command == "clear")
		{
			this.update("setAttr", "item", new Dict{});
			this.update("setAttr", "old_item", new Dict{});
		}
	}
	
}



/**
 * On dialog event
 */
async void onDialogEvent(Message<DialogEvent> msg)
{
	if (this.dialog == null) return;
	
	DialogWidgetModel widget_model = this.model();
	
	DialogEvent e = msg.data;
	if (msg.sender == this.dialog)
	{
		if (e.button_result == "cancel")
		{
			this.sendEvent( new SignalEvent{ "command": "hide" }, this.dialog );
		}
		else
		{
			if (widget_model.action == "add" or widget_model.action == "edit")
			{
				await this.saveItem();
			}
			else if (widget_model.action == "delete")
			{
				await this.deleteItem();
			}
		}
	}
}



/**
 * Save item
 */
async void saveItem()
{
	string widget_key = this.getWidgetKey();
	string crud_class_name = this.driver.layout.page_class;
	
	CrudPageModel page_model = this.model();
	DialogWidgetModel widget_model = this.widgetModel();
	Dict old_item = widget_model.old_item;
	Dict new_item = widget_model.item;
	Dict pk = page_model.getPrimaryKey(old_item);
	
	if (widget_model.action == "add")
	{
		this.sendEvent( new SignalEvent{ "command": "setWaitMessage" }, this.dialog );
		
		RemoteCallAnswer answer = await WebApp::externalBusCall
		{
			"object_name": rtl::methodApply(crud_class_name, "getCrudObjectName"),
			"interface_name": "core.crud",
			"method_name": "create",
			"data":
			{
				"pk": pk,
				"item": new_item,
			},
		};
		
		if (answer.isSuccess())
		{
			this.sendEvent( new SignalEvent{ "command": "hide" }, this.dialog );
			
			/* Send message */
			string current_widget = widget_model.current_widget;
			CrudWidgetEvent event = new CrudWidgetEvent
			{
				"from": widget_key,
				"dest": current_widget,
				"action": CrudWidgetEvent::CREATE_ITEM,
				"pk": pk,
				"new_item": answer.response["new_item"],
			};
			await this.signal(event);
		}
		else
		{
			this.sendEvent( new SignalEvent{ "command": "setAnswer", "data": answer }, this.dialog );
		}
	}
	
	else if (widget_model.action == "edit")
	{
		this.sendEvent( new SignalEvent{ "command": "setWaitMessage" }, this.dialog );
		
		RemoteCallAnswer answer = await WebApp::externalBusCall
		{
			"object_name": rtl::methodApply(crud_class_name, "getCrudObjectName"),
			"interface_name": "core.crud",
			"method_name": "update",
			"data":
			{
				"pk": pk,
				"item": new_item,
			},
		};
		
		if (answer.isSuccess())
		{
			this.sendEvent( new SignalEvent{ "command": "hide" }, this.dialog );
			
			/* Send message */
			string current_widget = widget_model.current_widget;
			CrudWidgetEvent event = new CrudWidgetEvent
			{
				"from": widget_key,
				"dest": current_widget,
				"action": CrudWidgetEvent::UPDATE_ITEM,
				"pk": pk,
				"old_item": old_item,
				"new_item": answer.response["new_item"],
			};
			await this.signal(event);
		}
		else
		{
			this.sendEvent( new SignalEvent{ "command": "setAnswer", "data": answer }, this.dialog );
		}
		
	}
}



/**
 * Delete item
 */
async void deleteItem()
{
	string widget_key = this.getWidgetKey();
	string crud_class_name = this.driver.layout.page_class;
	
	CrudPageModel page_model = this.model();
	DialogWidgetModel widget_model = this.widgetModel();
	Dict item = widget_model.item;
	Dict pk = page_model.getPrimaryKey(item);
	
	/* Send api */
	RemoteCallAnswer answer = await WebApp::externalBusCall
	{
		"object_name": rtl::methodApply(crud_class_name, "getCrudObjectName"),
		"interface_name": "core.crud",
		"method_name": "delete",
		"data":
		{
			"pk": pk,
		},
	};
	
	if (answer.isSuccess())
	{
		this.dialog.update("hide");
		
		/* Send message */
		string current_widget = widget_model.current_widget;
		CrudWidgetEvent event = new CrudWidgetEvent
		{
			"from": widget_key,
			"dest": current_widget,
			"action": CrudWidgetEvent::DELETE_ITEM,
			"pk": pk,
		};
		await this.signal(event);
	}
	else
	{
		this.dialog.update("setAnswer", answer);
	}
}

</script>

</class>