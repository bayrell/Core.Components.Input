<class version="1.0"
	name="Runtime.Web.CRUD.TableWidget" extends="Runtime.Web.App.Widget" 
	module="Runtime.Web.CRUD" model="Runtime.Web.App.PageModel"
>

<use name="Runtime.Web.CRUD.SearchWidgetModel" />
<use name="Runtime.Web.CRUD.TableWidgetModel" />
<use name="Runtime.Core.Message" />
<use name="Runtime.Web.LayoutModel" />
<use name="Runtime.Web.CRUD.FieldInfo" />
<use name="Runtime.Web.Events.MouseClickEvent" />
<use name="Runtime.Web.Input.Button" />

<style>
.table{
	border-collapse: collapse;
	border: 1px ${ vars["colors", "default", "border"] } solid;
	margin-top: 10px;
}
.td, .th{
	border: 1px ${ vars["colors", "default", "border"] } solid;
	padding: 5px;
	text-align: center;
}
.row:hover td{
	background-color: ${ vars["colors", "default", "hover-background"] };
	color: ${ vars["colors", "default", "hover-text"] };
}
.td-edit-buttons{
	margin-left: -2px;
	margin-right: -2px;
}
.td-edit-buttons .button, .td-edit-buttons %(Button)button{
	margin-left: 2px;
	margin-right: 2px;
}
</style>


<template>

	<table class="table" @key="table">
		%var TableWidgetModel table_widget_model = model.widgets[ params["widget_key"] ];
		%var SearchWidgetModel search_widget_model = model.widgets[ table_widget_model.search_widget_key ];
		
		{ static::renderHeader(layout, model, params, table_widget_model, search_widget_model) }
		{ static::renderRows(layout, model, params, table_widget_model, search_widget_model) }
	</table>

</template>


<template name="renderHeader"
	args="LayoutModel layout, PageModel model, Dict params,
		TableWidgetModel table_widget_model, SearchWidgetModel search_widget_model"
>
	
	%var Collection<string> table_fields = search_widget_model.table_fields;
	
	<tr class="header">
	%for (int i=0; i<table_fields.count(); i++)
	{
		%var string field_name = table_fields[i];
		%var FieldInfo field = search_widget_model.getFieldInfo(field_name);
		<th class="th" class={ "th--" ~ field_name } data-name={ field_name } @key={ "th-" ~ field_name }>
			{ field["label"] }
		</th>
	}
	</tr>
	
</template>


<template name="renderRows"
	args="LayoutModel layout, PageModel model, Dict params,
		TableWidgetModel table_widget_model, SearchWidgetModel search_widget_model"
>	
	%if (search_widget_model != null and search_widget_model.rows != null)
	{
		%for (int i=0; i<search_widget_model.rows.count(); i++)
		{
			{ static::renderRow(layout, model, params, table_widget_model, search_widget_model, i) }
		}
	}
</template>


<template name="renderRow"
	args="LayoutModel layout, PageModel model, Dict params,
		TableWidgetModel table_widget_model, SearchWidgetModel search_widget_model, int index"
>
	%var Collection<string> table_fields = search_widget_model.table_fields;
	
	<tr class="row" data-index={ index } @key={ "tr-" ~ index }>
	%for (int i=0; i<table_fields.count(); i++)
	{
		%var string field_name = table_fields[i];
		%var FieldInfo field = search_widget_model.getFieldInfo(field_name);
		<td class="td" class={ "td-" ~ field_name } data-name={ field_name } @key={ "td-" ~ field_name } >
			{ static::renderCell(layout, model, params, table_widget_model, search_widget_model, index, field) }
		</td>
	}
	</tr>
	
</template>


<template name="renderCell"
	args="LayoutModel layout, PageModel model, Dict params,
		TableWidgetModel table_widget_model, SearchWidgetModel search_widget_model,
		int index, FieldInfo field"
>
	%var Dict row = search_widget_model.rows[index];
	%var string crud_class_name = layout.page_class;
	
	%if (field != null)
	{
		%var string field_class_name = field["class_name"] |> default string "";
		%var Dict crud_settings =
		{
			"crud_kind": table_widget_model.kind,
			"crud_index": index,
			"crud_item": row,
			"crud_params": params,
			"crud_field": field,
			"crud_field_name": field.api_name,
			"crud_search_model": search_widget_model,
			"crud_table_model": table_widget_model,
			"crud_field_class_name": field_class_name,
			"crud_show": true,
			"value": search_widget_model["rows", index, field.api_name],
		};
		
		<!-- Extend class settings -->
		%var crud_settings = crud_settings.concat(field.class_settings);
		
		<!-- Custom settings -->
		%if (rtl::method_exists(crud_class_name, "customSettings"))
		{
			%var crud_settings = rtl::methodApply(crud_class_name, "customSettings", [layout, crud_settings]);
		}
		
		<!-- Render value -->
		%var html renderValue = null;
		%if (rtl::method_exists(crud_class_name, "renderField"))
		{
			%var renderValue = rtl::methodApply(crud_class_name, "renderField", [layout, crud_settings]);
		}
		
		<!-- Render Field -->
		%var bool crud_show = crud_settings["crud_show"];
		%var field_class_name = crud_settings["crud_field_class_name"];
		%if (crud_show)
		{
			%if (renderValue !== null)
			{
				{ renderValue }
			}
			%else if (not rtl::isEmpty(field_class_name))
			{
				<{field_class_name} @bind=["rows", index, field.api_name] @key={ field.api_name } ...crud_settings />
			}
		}
	}

</template>


</class>